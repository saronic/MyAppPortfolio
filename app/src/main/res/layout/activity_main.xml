<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fei.myappportfolio.MainActivity">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:text="My Nanodegree APPs!"/>
     <Button
         android:id="@+id/btn_popular_movies"
         style="@style/PortfolioButton"
         android:text="Popular Movies"
         android:layout_below="@id/tv_title"/>
    <Button
        android:id="@+id/btn_stock_hawk"
         style="@style/PortfolioButton"
         android:text="stock hawk"
         android:layout_below="@id/btn_popular_movies"/>
    <Button
        android:id="@+id/btn_build_bigger"
         style="@style/PortfolioButton"
         android:text="biuld bigger"
         android:layout_below="@id/btn_stock_hawk"/>
    <Button
        android:id="@+id/btn_make_material"
         style="@style/PortfolioButton"
         android:text="make your app material"
         android:layout_below="@id/btn_build_bigger"/>
    <Button
        android:id="@+id/btn_go_ubiquitous"
         style="@style/PortfolioButton"
         android:text="go ubiquitous"
         android:layout_below="@id/btn_make_material"/>
    <Button
        android:id="@+id/btn_capstone"
         style="@style/PortfolioButton"
         android:text="capstone"
         android:layout_below="@id/btn_go_ubiquitous"/>
</RelativeLayout>
